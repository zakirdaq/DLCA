<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#E8EBEF" android:startColor="#E8EBEF" android:type="linear" />

                    <stroke android:width="3dp" android:color="#b0b0b0" />

                    <corners android:radius="4dp" />

                    <padding android:bottom="5dp" android:left="20dp" android:right="5dp" android:top="5dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@android:drawable/arrow_down_float" />
            </item>
        </layer-list>
    </item>
</selector>